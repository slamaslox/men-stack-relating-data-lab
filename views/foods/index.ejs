<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Pantry</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>My Pantry</h1>
    <% if (!pantry) { %>
    <p>Pantry is undefined</p>
    <% } else if (pantry.length === 0) { %>
    <p>Pantry is empty</p>
    <% } else { %>
    <ul>
      <% pantry.forEach((food) => { %>
      <li>
        <%= food.name %>
        <form
        action="/users/<%= user._id %>/foods/<%= food._id %>/edit"
        method="GET"
        style="display: inline"
      >
        <button type="submit">Edit Item</button>
      </form>
        <form
          action="/users/<%= user._id %>/foods/<%= food._id %>?_method=DELETE"
          method="POST"
          style="display: inline"
        >
          <button type="submit">Delete Item</button>
        </form>
      </li>
      <% }) %>
    </ul>
    <% } %>
    <a href="/users/<%=user._id%>/foods/new">New</a>
  </body>
</html>
