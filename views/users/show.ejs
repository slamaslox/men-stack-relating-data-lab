<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= user.username %>'s Pantry</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1><%= user.username %>'s Pantry</h1>
    <% if (pantry.length === 0) { %>
    <p>Pantry is empty</p>
    <% } else { %>
    <ul>
      <% pantry.forEach((food) => { %>
      <li>
        <%= food.name %>
      <% }) %>
    </ul>
    <% } %>
  </body>
</html>
